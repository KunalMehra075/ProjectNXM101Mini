  <body>
    <div id="bg"></div>
  {{>navbar}}
 

  <div id="spinner" class="spinner-border text-light" role="status">

</div>

</div>
    <!--?--------------------------------------------- Main Body ----------------------------------------------->
    <main>
      <img src="/static/Images/team.gif" alt="" id="gif" />
      <section id="mcontainer">
        <div id="right">
          <h1 id="signuphead">Sign up</h1>
          <form id="signup-form">
            <!-- username,email,dob,role,location,password,confirm password -->
            <label for="">Enter User Name</label><br />
            <input type="text" id="name"placeholder="Enter UserName" required /><br />
            <label for="">Enter Email</label><br />
            <input type="email" id="email" placeholder="Enter Email" required />
            <br />
            <label for="">Enter D.O.B</label><br />
            <input type="date" id="dob" placeholder="Enter D.O.B" required />
            <br />
            <label for="">Enter Role</label><br />
            <select type="text" id="role" placeholder="Enter Role" required>
              <option value="">Chose an option</option>
              <option value="admin">Admin</option>
              <option value="explorer">Explorer</option>
            </select>
            <br />
            <label for="">Enter Location</label><br />
            <input type="text" id="location" placeholder="Enter Location" required />
            <br />
            <label for="">Enter Password</label><br />
            <input type="password" id="pass" placeholder="Enter Password" required />
            <br />
            <label for="">Confirm Password</label><br />
            <input
            id="conf"
              type="password"
              placeholder="Enter password again"
              required
            />
            <br />
            <p id="checkbox">
              <input type="checkbox" required />By clicking here, I state that I
              have read and understood the terms and conditions.
            </p>

            <input class="bunten" type="submit" value="Sign Up" />
            <br />
            <br />
            <center>OR</center>
            <hr />
            <br />
            <button class="bunten" id="goog">
              Continue with Google
              <label style="color: white">-</label>
              <img width="20px" src="/static/Images/goog.png" alt="" />
            </button>
          </form>
        </div>
      </section>
      <div id="someTxt">
        <h2>Hey User !</h2>
        If you fill the details and click on Sign-in, your data will be send to
        MongoDb Atlas Database.And then you can later edit your data also.
      </div>
    </main>
    <!--?--------------------------------------------- Footer ----------------------------------------------->
       {{>footer}}
  </body>
</html>
